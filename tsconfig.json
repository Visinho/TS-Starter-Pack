{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "target": "es2016",                                 
    "module": "commonjs",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,   
    "noImplicitAny": true,         
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "./*.js", "src/**/*.ts", "tests/**/*.ts"
  ]
}
